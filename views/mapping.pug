extends layout

block content
    #dialog.modal.fade(role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title 添加映射
                .modal-body
                    form#formTarget(action='/mapping/target' method='post')
                        .form-group
                            label(for='target_alias') 别名
                            input#target_alias.form-control(type='text' name='alias')
                        .form-group
                            label(for='target_origin') 源
                            input#target_origin.form-control(type='text' name='origin')
                            //- smal.form-text.text-muted We'll never share your email with anyone
                        //- .form-group
                        //-     label(for='target_action') Target action
                        //-     input#target_action.form-control(type='text' name='action')
                        .form-group
                            label(for='target_version') 版本
                            input#target_version.form-control(type='text' name='version')
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') 关闭
                    button#btnSave.btn.btn-primary(type='button')
                        <svg width="19px" height="19px" viewBox="0 0 16 16" class="bi bi-check" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"/>
                        </svg>
                        span  保存
    section
        div(style='text-align:right;padding:4px')
            button.btn.btn-warning.btn-sm(type='button' data-toggle='modal' data-target='#dialog')
                svg(width="19px" height="19px" viewBox="0 0 16 16" class="bi bi-plus" fill="currentColor" xmlns="http://www.w3.org/2000/svg")
                    path(fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z")
                span 添加
        table.table.table-sm.table-striped.table-hover
            thead
                tr
                    th(scope='col') 
                    th(scope='col') 别名
                    th(scope='col') 源
                    //- th(scope='col') action
                    th(scope='col') 版本
            each item in list
                tr
                    th(scope='row')= item.key
                    td= item.alias
                    td= item.origin
                    //- td= item.action
                    td
                        span.badge.badge-warning= item.version
    
    script(src='/javascripts/mapping/index.js' defer='defer')