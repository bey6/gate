extends layout

block assets
    link(rel='stylesheet' href='/css/simplemde.min.css')
    link(rel="stylesheet", href="/css/editor.css")
    script(src='/js/simplemde.min.js' defer='defer')
    script(src='/js/lodash.js' defer='defer')
    script(src='/js/editor.js' defer='defer')

block content
    ul#file-list
        each md in mds
            li
                div.md-preview
                    pre(data-article-name=md.filename)=md.content
                    h4=md.title
    article
        textarea#view-area