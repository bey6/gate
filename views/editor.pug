extends layout

block assets
    link(rel='stylesheet' href='/stylesheets/simplemde.min.css')
    link(rel="stylesheet", href="/stylesheets/editor.css")
    script(src='/javascripts/simplemde.min.js' defer='defer')
    script(src='/javascripts/editor.js' defer='defer')

block content
    ul#file-list(style='float:left;width:208px;padding:12px;list-style:none')
        each md in mds
            li
                div.md-preview
                    pre=md.content
                    h4=md.title
    textarea#view-area(style='float:left;width:80%')