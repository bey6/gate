extends ../layout

block assets
    link(rel="stylesheet", href="/css/issue.css")
    script(src="/js/issue.js" defer='defer')

block content
    section.issue-list
        ul.list-group
            each issue in issues
                li.list-group-item(class=issue.class style='padding: 8px 20px')
                    span=issue.desc
                    button.check-btn(type='button' class=issue.done?'check-btn--checked':'')